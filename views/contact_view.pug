extends layout

block content
  .pt-4
  .container
  .text-center
    h1= title
    hr
    div#contact-wrapper
      ul.contact-details.list-unstyled.p-3
        li
          p= `${contact.firstName} ${contact.lastName}`
          if contact.email !== 'undefined'
            p= contact.email
          p Last Edited: #{contact.date}
          p= contact.notes
          a.btn.btn-secondary.btn-sm(href=`/contacts/${contact.id}/edit`) Edit
          | 
          a.btn.btn-secondary.btn-sm.btn-danger(href=`/contacts/${contact.id}/delete`) Delete
          br
          br
          a.btn.btn-secondary.btn-sm.btn-dark(href=`/contacts`) <
  .pt-4
  div.fixed-bottom.bg-white
    hr.mt-0
    footer.small.fst-italic.text-center
      p Copyright 2024. Angela Petrone.
